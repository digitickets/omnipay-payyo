{
  "name": "payyo/omnipay-payyo",
  "type": "library",
  "description": "Payyo Gateway for the Omnipay payment processing library",
  "keywords": [
    "gateway",
    "payyo",
    "merchant",
    "omnipay",
    "pay",
    "payment"
  ],
  "homepage": "https://developers.payyo.ch",
  "license": "MIT",
  "authors": [
    {
      "name": "Payyo AG",
      "email": "support@payyo.ch"
    }
  ],
  "autoload": {
    "psr-4": {
      "Omnipay\\Payyo\\": "src/",
      "Omnipay\\Tests\\Payyo\\": "tests/"
    }
  },
  "require": {
    "php": "^7.2",
    "payyo/php-sdk": "^5.0",
    "omnipay/common": "^3.0"
  },
  "require-dev": {
    "omnipay/tests": "^3.1",
    "http-interop/http-factory-guzzle": "^1.0",
    "friendsofphp/php-cs-fixer": "^2.16",
    "phpstan/phpstan": "^0.12.42"
  },
  "scripts": {
    "run-tests": "vendor/bin/phpunit",
    "run-cs-fixer": "vendor/bin/php-cs-fixer fix",
    "run-phpstan": "vendor/bin/phpstan analyse --level 5 src"
  }
}
